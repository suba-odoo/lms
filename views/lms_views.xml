<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="lms_action" model="ir.actions.act_window">
        <field name="name">Learning Management System</field>
        <field name="res_model">learning.system</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="learning_system_view_tree" model="ir.ui.view">
        <field name="name">learning.system.view.tree</field>
        <field name="model">learning.system</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="gender"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="address"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="date"/>
            </tree>
        </field>
    </record>


    <record id="learning_system_view_form" model="ir.ui.view">
        <field name="name">learning.system.view.form</field>
        <field name="model">learning.system</field>
        <field name="arch" type="xml">
            <form string="Type">
                <sheet>
                    <field name="image" widget='image' nolabel='1' class="oe_avatar"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="gender"/>
                            <field name="email"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="address"/>
                            <field name="postcode"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                </group>
                            </page>
                        </notebook>                       
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>